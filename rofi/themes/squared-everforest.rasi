* {
    font:   "JetBrainsMono Nerd Font Medium 12";

    bg0:     #2D353B;
    bg1:     #323D43;
    fg0:     #D3C6AA;

    accent-color:     #A7C080;
    urgent-color:     #E67E80;

    background-color:   transparent;
    text-color:         @fg0;

    margin:     0;
    padding:    4;
    spacing:    0;
}

window {
    location:       center;
    width:          600;
    y-offset:       0;

    border:         2;
    border-color:   #A7C080;

    background-color:   @bg0;

}

